# WireGuard Client Configuration Template
# Copy to /etc/wireguard/wg0.conf and fill in the placeholders

[Interface]
PrivateKey = <CLIENT_PRIVATE_KEY>
Address = <CLIENT_IP>/24  # 10.66.66.2 for mac-mini-1, 10.66.66.3 for mac-mini-2
DNS = 1.1.1.1

[Peer]
PublicKey = <SERVER_PUBLIC_KEY>
Endpoint = 8.222.187.10:51820
AllowedIPs = 0.0.0.0/0       # Full tunnel (all traffic through VPN)
# AllowedIPs = 10.66.66.0/24  # Split tunnel (only VPN network)
PersistentKeepalive = 25     # Keep connection alive through NAT
